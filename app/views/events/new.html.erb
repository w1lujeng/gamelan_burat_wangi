<h2>Members Area</h2>

<div class="row">
  <div class="col-xs-4">
    <h3>Create new event</h3>
    <%= form_for @event do |f| %>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :date %>
        <%= f.text_field :date, placeholder: "YYYY-MM-DD", class: "form-control" %>
      </div>
      <div>
        <%= f.submit "Create Event", class: "btn btn-success"%>
      </div>
    <% end %>
  </div>

   
  
  
</div>


      
   
 

