<h2>Members Area</h2>

  <div class="row">
    <div class="col-md-4">
      <h3>Members</h3>
      <% @users.each do |user|%>
        <div>
          <strong><%= user.name %></strong>  
        </div>
        <div>
            <%= link_to "edit member", edit_user_path(user), class: "btn btn-xs btn-warning text-right" if user == current_user %>             
        </div>
      <% end %>
    </div>

    <div class="col-md-4">
      <h3>This Month's Birthdays</h3>
      <% @users.each do |user|%>
        <% if display_month_birthday(user.birthday) %>
          <div>
            <strong><%= user.name %></strong> - 
          </div>
          <div>
            <%= display_month_birthday(user.birthday) %>
          </div>
        <% end %>
      <% end %>
    </div>

    <div class="col-md-4">
      <h3>Upcoming Events</h3>
      <% if @events.count == 0 %>
        <h5>No Events Yet!</h5>
      <% else %>
      <% @events.each do |event| %>
        <div>
          <strong><%= event.title %></strong>
        </div>
        <div>
            <%= event.date %>
        </div>
        
        <div>
            <%= link_to "edit event", edit_event_path(event), class: "btn btn-xs btn-warning text-right" %>         
            <%= link_to "delete event", event_path(event), class: "btn btn-xs btn-danger", method: :delete, data: { confirm: "Are you sure you want to delete this event?"} %>
          </div>
        <% end %>
      <% end %>
    </div>  
  </div>
</div>
