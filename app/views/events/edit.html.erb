<h2>Members Area</h2>

<div class="row">
  <div class="col-md-4">
    <h3>Edit Event</h3>

    <%= form_for @event do |f| %>
 
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :date %>
        <%= f.text_field :date, placeholder: "YYYY-MM-DD", class: "form-control" %>
      </div>   
      <%= f.submit "Edit event", class: "btn btn-success"%>
    <% end %>
  </div>

  <div class="col-md-4">
  </div>

  <div class="col-md-4">
      <h2>Upcoming Events</h2>
      <% if @events.count == 0 %>
      <h5>No Events Yet!</h5>
        <% else %>
        <% @events.each do |event| %>
          <div>
            <strong><%= event.title %></strong>
          </div>
          <div>
              <%= event.date %>
          </div>
          <div>
            <%= link_to "edit event", edit_event_path(event), class: "btn btn-xs btn-warning text-right" %>         
            <%= link_to "delete event", event_path(event), class: "btn btn-xs btn-danger", method: :delete, data: { confirm: "Are you sure you want to delete this event?"} %>
          </div>
        <% end %>
      <% end %>
  </div>   

</div>