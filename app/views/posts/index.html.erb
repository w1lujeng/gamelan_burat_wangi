<p>Keep it sopan, please</p>
     
<% if @posts.count == 0 %>
  <h5>No Posts Yet!</h5>
<% else %>
  <ul>
    <% @posts.each do |post| %>
      <li>
        <strong>
          <%= link_to post.content, post_path(post) %>
        </strong>
        
        <span>(<%= post.created_at %>)</span>
        <%= link_to "edit post", post_path(post), class: "btn btn-xs btn-warning", method: :update, data: { confirm:
        "Are you sure you want to delete this post?"} %>
        
        <%= link_to "delete post", post_path(post), class: "btn btn-xs btn-danger", method: :delete, data: { confirm:
        "Are you sure you want to delete this post?"} %>
      </li>
    <% end %>
  </ul>
<% end %>

<hr>
<h4>New Posts!</h4>

<%= form_for @post do |f| %>
  <div>
    <%= f.label :content %>
    <%= f.text_field :content %>
  </div>

<% end %>




      
   
 

