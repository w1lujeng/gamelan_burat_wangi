<h2>Members Area</h2>
<%= link_to 'Birthdays', users_path %>
<div class="row">
  <div class="col-xs-4">
    <h4>Create new post</h4>
    <%= form_for @post do |f| %>
      <div>
        <%= f.label :content %>
        <%= f.text_field :content %>
      </div>
    <% end %>
  </div>
  <div class="col-xs-6">
    <% if @posts.count == 0 %>
      <h5>No Posts Yet!</h5>
    <% else %>
      <% @posts.each do |post| %>
        <div class="panel panel-default">
          <div class="panel-heading">
            <%= post.created_at %>
          </div>
          <div class="panel-body">
            <%= post.content %>
          </div>
          <div class="panel-footer">
            <%= link_to "edit post", edit_post_path(post), class: "btn   btn-xs btn-warning text-right" %>
          
            <%= link_to "delete post", post_path(post), class: "btn btn-xs btn-danger", method: :delete, data: { confirm:
            "Are you sure you want to delete this post?"} %>
          </div>
        </div>
      <% end %>
    <% end %>
    <div>
    

    
  </div>

  
</div>


      
   
 

