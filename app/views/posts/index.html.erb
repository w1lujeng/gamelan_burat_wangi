<h2>Members Area</h2>
<%= link_to 'Posts', posts_path %> |
<%= link_to 'Members', users_path %> |
<%= link_to 'Add new event', new_event_path %> 
<div class="row">
  <div class="col-xs-4">
    <h3>Create new post</h3>
    <%= form_for @post do |f| %>
      <div>
        <%= f.label :content %>
        <%= f.text_field :content %>
      </div>
    <div>
        <%= f.submit "Create Event", class: "btn btn-success"%>
      </div>
    <% end %>
    </div>
  <div class="col-xs-4">
  <br>
    <% if @posts.count == 0 %>
      <h5>No Posts Yet!</h5>
    <% else %>
      <% @posts.each do |post| %>
        <div class="panel panel-default">
          <div class="panel-heading">
            <%= post.created_at %>
          </div>
          <div class="panel-body">
            <%= post.content %>
          </div>
          <div class="panel-footer">
            <%= link_to "edit post", edit_post_path(post), class: "btn   btn-xs btn-warning text-right" %>         
            <%= link_to "delete post", post_path(post), class: "btn btn-xs btn-danger", method: :delete, data: { confirm:
            "Are you sure you want to delete this post?"} %>       
          </div>         
        </div>
      <% end %>
      
    <% end %> 
  </div>

  <div class="col-xs-4">
    <h2>Upcoming Events</h2>
  </div>  
</div>


      
   
 

