<h2>Members Area</h2>

<div class="row">
  <div class="col-xs-4">
    <h3>Create new post</h3>
    <%= form_for @post do |f| %>
      <div class="form-group">
        <%= f.label :content %>
        <%= f.text_field :content, class: "form-control" %>
      </div>
    <div>
        <%= f.submit "Create Post", class: "btn btn-success"%>
      </div>
    <% end %>
    </div>
  <div class="col-xs-4">
  <br>
  <br>
    <% if @posts.count == 0 %>
      <h5>No Posts Yet!</h5>
    <% else %>
      <% @posts.each do |post| %>
        <div class="panel panel-default">
          <div class="panel-heading">
            <%= post.created_at %>
          </div>
          <div class="panel-body">
            <%= post.content %>
          </div>
          <div class="panel-footer">
            <%= link_to "edit post", edit_post_path(post), class: "btn   btn-xs btn-warning text-right" %>         
            <%= link_to "delete post", post_path(post), class: "btn btn-xs btn-danger", method: :delete, data: { confirm:
            "Are you sure you want to delete this post?"} %>       
          </div>         
        </div>
      <% end %>
      
    <% end %> 
  </div>

  <div class="col-xs-4">
    <h2>Upcoming Events</h2>
    <% if @events.count == 0 %>
      <h5>No Events Yet!</h5>
    <% else %>
      <% @events.each do |event| %>
          <div>
            <strong><%= event.title %></strong>
          </div>
          <div>
            <%= event.date %>
          </div>
      <% end %>
    <% end %>
  </div>  
</div>


      
   
 

